/**
 * Get alma credentials for user.
 */
function _alma_user_get_credentials($account) {
  // See if we have credentials for the given user in the session.
  if ($_SESSION['alma_creds'][$account->uid]) {
    return $_SESSION['alma_creds'][$account->uid];
  }
  return DING_PROVIDER_AUTH_REQUIRED;
}
